# Backend Development Environment Variables
# Copy this file to .env.development and fill in your values

# Plaid Configuration (Sandbox for testing)
PLAID_CLIENT_ID=your_client_id
PLAID_SECRET=your_sandbox_secret
PLAID_ENV=sandbox

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Security Keys
# Generate JWT_SECRET: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=dev_secret_123

# Generate ENCRYPTION_KEY: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=generate_a_64_char_hex_key_for_dev

# Server Configuration
NODE_ENV=development
PORT=3001

# Optional: Frontend URL for CORS
FRONTEND_URL=http://localhost:3000
