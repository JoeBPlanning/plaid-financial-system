# Backend Production Environment Variables
# Copy this file to .env.production and fill in your values
# Also add ALL these variables to Render.com Dashboard â†’ Environment

# Plaid Configuration (Development mode for real banks)
PLAID_CLIENT_ID=your_client_id
PLAID_SECRET=your_development_secret
PLAID_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Security Keys
# Generate JWT_SECRET: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=generate_a_strong_random_string

# Generate ENCRYPTION_KEY: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# IMPORTANT: Use a DIFFERENT key than development!
ENCRYPTION_KEY=generate_a_different_64_char_hex_key_for_prod

# Server Configuration
NODE_ENV=production
PORT=10000

# Optional: Frontend URL for CORS
FRONTEND_URL=https://your-frontend-url.com
